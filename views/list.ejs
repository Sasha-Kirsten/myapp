<!doctype html>
<html>
  <head>
    <title>Welcome to <%=shopName%></title>
    <!-- Here in the list.ejs we make a list of all foods that is inside the database, there is no tailwind css code in the list because I was not sure how that would display on the screen. -->
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <h1 class="my-0 mx-auto max-w-3xl text-left"><%=shopName%> Shop</h1>
    <h2>Here are the foods:</h2>
    <ul>
      <% availableBooks.forEach(function(book) { %>
        <li><input type="checkbox" check><%= book.name %>, <%=book.value%>, <%= book.valueUnit%>,<%=book.carbs%>,<%=book.fat%>,<%=book.protein%>,<%=book.salt%>,<%=book.sugar%></li>
      <% }) %>
    </ul>
    <input type="submit" value="Calculate">
    </body>
</html>
